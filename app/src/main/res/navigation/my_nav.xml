<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/allMoviesFragment">

    <fragment
        android:id="@+id/allMoviesFragment"
        android:name="com.example.myapplicationsapir.ui.all_characters.AllMoviesFragment"
        android:label="all_movies_layout"
        tools:layout="@layout/all_movies_layout" >
        <action
            android:id="@+id/action_allMoviesFragment_to_addMoviesFragment"
            app:destination="@id/addMovieFragment" />
        <action
            android:id="@+id/action_allMoviesFragment_to_detailMovieFragment"
            app:destination="@id/detailMovieFragment" />
    </fragment>
    <fragment
        android:id="@+id/addMovieFragment"
        android:name="com.example.myapplicationsapir.ui.add_character.AddMovieFragment"
        android:label="add_movie_layout"
        tools:layout="@layout/add_movie_layout" >
        <action
            android:id="@+id/action_addMovieFragment_to_allMoviesFragment"
            app:destination="@id/allMoviesFragment"
            app:popUpTo="@id/allMoviesFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/detailMovieFragment"
        android:name="com.example.myapplicationsapir.ui.single_character.DetailMovieFragment"
        android:label="detail_movie_layout"
        tools:layout="@layout/detail_movie_layout">
        <action
            android:id="@+id/action_detailMovieFragment_to_editMovieFragment"
            app:destination="@id/editMovieFragment" />

    </fragment>
    <fragment
        android:id="@+id/editMovieFragment"
        android:name="com.example.myapplicationsapir.ui.edit_movie.EditMovieFragment"
        android:label="Edit Movie">
        <argument
            android:name="movieId"
            app:argType="integer" />
    </fragment>

</navigation>