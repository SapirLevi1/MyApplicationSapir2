<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/allMoviesFragment">

    <fragment
        android:id="@+id/allMoviesFragment"
        android:name="com.example.moviekotlist.ui.fragments.movies.AllMoviesFragment"
        android:label="all_movies_layout"
        tools:layout="@layout/fragment_all_movies" >
        <action
            android:id="@+id/action_allMoviesFragment_to_addMoviesFragment"
            app:destination="@id/addMovieFragment" />
        <action
            android:id="@+id/action_allMoviesFragment_to_detailMovieFragment"
            app:destination="@id/detailMovieFragment" />
        <action
            android:id="@+id/action_allMoviesFragment_to_favoriteMoviesFragment"
            app:destination="@id/favoriteMoviesFragment" />
        <action
            android:id="@+id/action_allMoviesFragment_to_omdbFragment"
            app:destination="@+id/OMDBFragment"/>
    </fragment>
    <fragment
        android:id="@+id/addMovieFragment"
        android:name="com.example.moviekotlist.ui.fragments.movies.AddMovieFragment"
        android:label="add_movie_layout"
        tools:layout="@layout/fragment_add_movie" >
        <action
            android:id="@+id/action_addMovieFragment_to_allMoviesFragment"
            app:destination="@id/allMoviesFragment"
            app:popUpTo="@id/allMoviesFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/detailMovieFragment"
        android:name="com.example.moviekotlist.ui.fragments.movies.DetailsMovieFragment"
        android:label="detail_movie_layout"
        tools:layout="@layout/fragment_details_movie">
        <action
            android:id="@+id/action_detailMovieFragment_to_editMovieFragment"
            app:destination="@id/editMovieFragment" />

    </fragment>
    <fragment
        android:id="@+id/editMovieFragment"
        android:name="com.example.moviekotlist.ui.fragments.movies.EditMovieFragment"
        android:label="Edit Movie">
        <argument
            android:name="movieId"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/favoriteMoviesFragment"
        android:name="com.example.moviekotlist.ui.fragments.movies.FavoriteMoviesFragment"
        android:label="@string/title_favorite_movies"
        tools:layout="@layout/fragment_favorite_movies">
        <action
            android:id="@+id/action_favoriteMoviesFragment_to_detailMovieFragment"
            app:destination="@id/detailMovieFragment" />
    </fragment>
    <fragment
        android:id="@+id/OMDBFragment"
        android:name="com.example.moviekotlist.ui.fragments.movies.OMDBFragment"
        android:label="@string/title_omdb"
        tools:layout="@layout/fragment_omdb">

        <action
            android:id="@+id/action_OMDBFragment_to_detailsMovieAPIFragment"
            app:destination="@id/detailsMovieAPIFragment" />

    </fragment>
    <fragment
        android:id="@+id/detailsMovieAPIFragment"
        android:name="com.example.moviekotlist.ui.fragments.movies.DetailsMovieAPIFragment"
        android:label="title_movie_details"
        tools:layout="@layout/fragment_details_movie_api">
    </fragment>


</navigation>