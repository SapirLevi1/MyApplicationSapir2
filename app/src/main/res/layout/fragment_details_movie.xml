<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:fillViewport="true"
    tools:context=".ui.fragments.movies.DetailsMovieFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/space_m">

        <com.google.android.material.card.MaterialCardView
            style="@style/AppCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/space_m">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/movie_image"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/cd_movie_image"
                    app:shapeAppearanceOverlay="@style/ShapeAppearance.MaterialComponents.MediumComponent"
                    tools:src="@mipmap/ic_launcher"/>

                <TextView
                    android:id="@+id/movie_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_m"
                    android:textColor="@color/app_text_primary"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    tools:text="Interstellar" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/favorite_btn"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_s"
                    android:text="@string/action_add_to_favorites"
                    app:icon="@drawable/ic_heart_outline"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp" />

                <TextView
                    android:id="@+id/movie_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_xs"
                    android:textColor="@color/app_text_secondary"
                    android:textSize="15sp"
                    tools:text="A sci-fi movie description..." />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_m"
                    android:layoutDirection="locale"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/detailWatchedDate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/app_text_secondary"
                        android:textSize="14sp"
                        android:textDirection="locale"
                        tools:text="Watched: 01/01/2025" />

                    <TextView
                        android:id="@+id/detailScore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/space_s"
                        android:textColor="@color/app_primary"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textDirection="locale"
                        tools:text="Score: 8/10" />
                </LinearLayout>


            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_m"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/back_btn"
                style="@style/AppButton.Outlined"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/action_back" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/editBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_s"
                android:layout_weight="1"
                android:text="@string/action_edit" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
